<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BuscarPokemon"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Búsqueda de Pokémon"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Buscar por número en la pokédex:"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Número del pokémon"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/numero"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Buscar por nombre:"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre del pokémon"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/nombre"
            android:inputType="text"
            />

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Buscar"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:id="@+id/buscar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados:"
        android:textSize="25sp"
        android:id="@+id/textoResultado"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/pokemonResultado"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Ver Pokémon"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:id="@+id/irAlPokemon"
        />

</LinearLayout>